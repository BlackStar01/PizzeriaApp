<UserControl x:Class="PizzeriaApp.Views.QuestionsByCommis"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PizzeriaApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="251*"/>
            <ColumnDefinition Width="549*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="Old" Content="Je suis nouveau" HorizontalAlignment="Center" Margin="0,147,0,0" VerticalAlignment="Top" Height="32" Width="122" Click="Button_Click"/>
        <Button Content="Je suis ancien" HorizontalAlignment="Center" Margin="0,197,0,0" VerticalAlignment="Top" Height="28" Width="122"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,64,0,0" TextWrapping="Wrap" Text="Votre première commande" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" TextAlignment="Center" Height="43" Width="114"/>
        <Button Content="Retour" HorizontalAlignment="Center" Margin="0,386,0,0" VerticalAlignment="Top" Height="32" Width="112"/>
        <DataGrid Grid.Column="1" d:ItemsSource="{d:SampleData ItemCount=5}" Background="#FFDADADA"/>

    </Grid>
</UserControl>
